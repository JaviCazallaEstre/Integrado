<div class="container modalAceite">
	<div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
		<button class="how-pos3 hov3 trans-04 js-hide-modal1">
		</button>

		<div class="row">
			<div class="col-md-6 col-lg-7 p-b-30">
				{% set foto = 'img/productos/' ~ producto.foto %}
				<img class="img-fluid m-l-40 fotoDetalle" src="{{foto}}"/>
			</div>

			<div class="col-md-6 col-lg-5 p-b-30">
				<div class="p-r-50 p-t-5 p-lr-0-lg">
					<h4 class="mtext-105 cl2 js-name-detail p-b-14 nombre">
						{{producto.nombre}}
					</h4>
					<span class="mtext-106 cl2">Precio:</span>
					<span class="mtext-106 cl2 precioModal">
						{{producto.precio|format_currency('EUR', locale='es')}}
					</span>

					<p class="stext-102 cl3 p-t-23 descripcion">
						{{producto.descripcion}}
					</p>

					<!--  -->
					<div class="p-t-33">
						<div class="flex-w flex-r-m p-b-10">
							<div class="size-203 flex-c-m respon6">
								Variedad
							</div>

							<div class="size-204 respon6-next">
								<div class="rs1-select2 bor8 bg0">
									{{producto.variedad}}
								</div>
							</div>
						</div>

						<div class="flex-w flex-r-m p-b-10">
							<div class="size-203 flex-c-m respon6">
								Capacidad
							</div>
							<div class="size-204 respon6-next">
								<div class="rs1-select2 bor8 bg0">
									{{producto.capacidad}}
								</div>
							</div>
						</div>
						<div class="flex-w flex-r-m p-b-10">
							<div class="size-203 flex-c-m respon6">
								Campaña
							</div>
							<div class="size-204 respon6-next">
								<div class="rs1-select2 bor8 bg0">
									{{producto.campana}}
								</div>
							</div>
						</div>

						<div class="flex-w flex-r-m p-b-10">
							<div class="size-203 flex-c-m respon6">
								Cosecha
							</div>
							<div class="size-204 respon6-next">
								<div class="rs1-select2 bor8 bg0">
									{{producto.cosecha}}
								</div>
							</div>
						</div>
						{% if app.user %}
						<div class="flex-w flex-r-m p-b-10">
							<div class="size-204 flex-w flex-m respon6-next">
								<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
									Añadir al carrito
								</button>
							</div>
						</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
