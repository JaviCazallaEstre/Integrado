<div class="bg0 p-t-75 p-b-85">
	<div class="container">
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">Producto</th>
								<th class="column-2"></th>
								<th class="column-3">Precio</th>
								<th class="column-4">Cantidad</th>
								<th class="column-5">Total</th>
							</tr>
							{% set precioTotal = 0 %}
							{% for producto in productos %}
								{% set precioPorProducto = producto.cantidad * producto.precio %}
								{% set precioTotal = precioTotal + precioPorProducto %}
								<tr class="table_row">
									<td class="column-1">
										<div id={{'quitarTodos_' ~ producto.id}} class="how-itemcart1 quitarTodos">
											{% set foto = "img/productos/" ~ producto.foto %}
											<img src="{{foto}}" alt="IMG">
										</div>
									</td>
									<td class="column-2">{{producto.nombre}}</td>
									<td class="column-3">{{producto.precio|format_currency('EUR', locale='es')}}</td>
									<td class="column-4">
										<div class="wrap-num-product flex-w m-l-auto m-r-0">
											<div id={{'quita_' ~ producto.id}} class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m quitaProductoCarrito">
												<i class="fs-16 zmdi zmdi-minus"></i>
											</div>

											<input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="{{producto.cantidad}}">
											<div id={{'anade_' ~ producto.id}} class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m anadeProductoCarrito">
												<i class="fs-16 zmdi zmdi-plus"></i>
											</div>
										</div>
									</td>
									<td id={{'total_' ~ producto.id}} class="column-5">{{precioPorProducto|format_currency('EUR', locale='es')}}</td>
								</tr>
							{% endfor %}
						</table>
					</div>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Carrito
					</h4>

					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2 precioCarrito">
								{{precioTotal|format_currency('EUR', locale='es')}}
							</span>
						</div>
					</div>

					<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						Pagar
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
