<body
	class="animsition" style="animation-duration: 1500ms; opacity: 1;">
	<!-- Header -->
	<header
		class="header-v2">
		<!-- Header desktop -->
		<div class="container-menu-desktop trans-03">
			<div class="wrap-menu-desktop">
				<nav
					class="limiter-menu-desktop p-l-45">

					<!-- Logo desktop -->
					<a href="main" class="logo">
						<img src="{{asset('images/icons/logo-01.jpg')}}" alt="IMG-LOGO">
					</a>

					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li class="active-menu">
								<a href="main">Inicio</a>
							</li>

							<li>
								<a href="tienda">Tienda</a>
							</li>
							<li>
								<a href="sobre">Sobre nosotros</a>
							</li>

							<li>
								<a href="contacto">Contacto</a>
							</li>
							{% if app.user %}
								{% if 'ROLE_ADMIN' in app.user.roles %}
									<li>
										<a href="admin">Admin</a>
									</li>
								{% endif %}
							{% endif %}
						</ul>
					</div>

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m h-full">
						{% if app.user %}
							<div class="dropdown m-r-20">
								<span>{{app.user.nombre}}</span>
								<div class="dropdown-content">
									<a href="pedidos">Mis pedidos</a>
									<a href="logout">Cerrar sesión</a>
								</div>
							</div>
							<div class="flex-c-m h-full p-l-18 p-r-25 bor5">
								<div class="icon-header-item cl2 hov-cl1 trans-04 carrito" >
									<i class="zmdi zmdi-shopping-cart"></i>
								</div>
							</div>
						{% else %}
							<div class="flex-c-m h-full p-r-24">
								<div class="menu-desktop">
									<ul class="main-menu">
										<li>
											<a href="register">Resgistrarse</a>
										</li>

										<li>
											<a href="login">Iniciar sesion</a>
										</li>
									</ul>
								</div>
							</div>
						{% endif %}
					</div>
				</nav>
			</div>
		</div>

		<!-- Header Mobile -->
		<div
			class="wrap-header-mobile">
			<!-- Logo moblie -->
			<div class="logo-mobile">
				<a href="main"><img src="{{asset('images/icons/logo-01.jpg')}}" alt="IMG-LOGO"></a>
			</div>

			{% if app.user %}
			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
				<div class="flex-c-m h-full p-lr-10 bor5">
					<div class="icon-header-item cl2 hov-cl1 trans-04 carrito" >
						<i class="zmdi zmdi-shopping-cart"></i>
					</div>
				</div>
			</div>
			{% endif %}

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>

		<div class="menu-mobile">
			<ul class="main-menu-m">
				<li>
					<a href="main">Inicio</a>
				</li>

				<li>
					<a href="tienda">Tienda</a>
				</li>

				<li>
					<a href="sobre">Sobre nosotros</a>
				</li>

				<li>
					<a href="contacto">Contacto</a>
				</li>
				{% if app.user %}
					{% if 'ROLE_ADMIN' in app.user.roles %}
						<li>
							<a href="admin">Admin</a>
						</li>
					{% endif %}
					<li>
						<a href="#">Mis pedidos</a>
					</li>
					<li>
						<a href="logout">Cerar sesión</a>
					</li>
				{% else %}
					<li>
						<a href="register">Registrarse</a>
					</li>
					<li>
						<a href="login">Iniciar sesión</a>
					</li>
				{% endif %}
			</ul>
		</div>
		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<div class="container-search-header">
				<button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
					<img src="images/icons/icon-close2.png" alt="CLOSE">
				</button>

				<form class="wrap-search-header flex-w p-l-15">
					<button class="flex-c-m trans-04">
						<i class="zmdi zmdi-search"></i>
					</button>
					<input class="plh3" type="text" name="search" placeholder="Search...">
				</form>
			</div>
		</div>
	</header>
</body>
